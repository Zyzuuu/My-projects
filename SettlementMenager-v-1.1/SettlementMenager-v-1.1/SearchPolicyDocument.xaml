<Window x:Class="LocalDatabaseApplication.SearchPolicyDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDatabaseApplication"
        mc:Ignorable="d"
        Title="Znajdź polisę" Height="150" Width="350" ResizeMode="CanMinimize"  WindowStartupLocation="CenterScreen" WindowState="Normal" Language="pl-PL" Name="SearchWindowClose">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="98*"/>
        </Grid.RowDefinitions>

        <!-- Search insurance policy number TextBox and Label-->
        <Label Content="Numer polisy" HorizontalAlignment="Left" Margin="21,10.723,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox Name="searchPolicyTextField" HorizontalAlignment="Left" Height="23" Margin="121,10.723,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Grid.Row="1"/>
        
        <!-- Search button -->
        <Button  Content="Szukaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="219,48.723,0,0" Height="30" Click="SearchPolicyNowButton" IsDefault="True" Grid.Row="1"/>

    </Grid>

</Window>