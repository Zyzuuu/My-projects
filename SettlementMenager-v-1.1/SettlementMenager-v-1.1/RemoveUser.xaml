<Window x:Class="LocalDatabaseApplication.RemoveUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDatabaseApplication"
        mc:Ignorable="d"
       ResizeMode="CanMinimize" 
        Title="Usuń użytkownika" Height="220" Width="350" WindowState="Normal" Language="pl-PL" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- User name TextBlock & Combobox -->
        <TextBlock HorizontalAlignment="Left" Margin="18,36,0,0" TextWrapping="Wrap" Text="Imię i nazwisko" VerticalAlignment="Top"/><ComboBox Name="nameData" HorizontalAlignment="Left" Margin="110,36,0,0" VerticalAlignment="Top" Width="203"/>
        <ComboBox Name="nameDataUserName" HorizontalAlignment="Left" Margin="110,36,0,0" VerticalAlignment="Top" Width="203"/>
        
        <!-- Delete user button-->
        <Button Background="green" Content="Usuń" HorizontalAlignment="Left" Margin="152,122,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="DeleteUserFromDatabaseButton"/>
        <!-- Close window button-->
        <Button Background="DarkRed" Content="Zamknij" HorizontalAlignment="Left" Margin="238,122,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="CloseThisWindowButton"/>
        
    </Grid>
</Window>
